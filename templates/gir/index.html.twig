{% extends 'admin.html.twig' %}

{% block title %}GIR{% endblock %}

{% block body %}

    <div class="main-panel">

        <nav class="navbar navbar-default navbar-fixed">
            <div class="container-fluid">
                <div class="navbar-header">
                    <a class="navbar-brand">Liste des girs</a>
                </div>
            </div>
        </nav>

        <div class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <div class="hover mb-10">
                            <a href="{{ path('gir_new') }}" class="btn btn-primary btn-fill">Ajouter un gir</a>
                            <span class="toggle_filter pl-10">
                                Filtrer
                        </span>
                            <a href="{{ path('gir_export') }}{{ stringResponse }}" class="btn btn-success btn-fill pull-right">Exporter</a>      
                        </div>                        
                        <div class="card p-10" id="filter-block">
                            {{ form_start(form) }}
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <label>{{ form_label(form.one) }}</label>
                                            {{ form_widget(form.one, {'attr': {'class': 'form-control'}}) }}
                                            {{ form_errors(form.one) }}
                                        </div>
                                        <div class="form-group">
                                            <label>{{ form_label(form.two) }}</label>
                                            {{ form_widget(form.two, {'attr': {'class': 'form-control'}}) }}
                                            {{ form_errors(form.two) }}
                                        </div>
                                        <div class="form-group">
                                            <label>{{ form_label(form.three) }}</label>
                                            {{ form_widget(form.three, {'attr': {'class': 'form-control'}}) }}
                                            {{ form_errors(form.three) }}
                                        </div>
                                    </div>
                                </div>

                                <button type="submit" class="btn btn-info btn-fill pull-right">Filtrer</button>
                                <a href="{{ path('gir_index') }}" class="btn btn-warning">RÃ©initialiser</a>
                                <div class="clearfix"></div>
                                {{ form_rest(form) }}
                                {{ form_end(form) }}
                        </div>

                        <div class="card">
                            <div class="content table-responsive table-full-width">

                                <div class="pr-10">
                                    {% include 'block/pagination.html.twig' with {
                                        'name' : 'gir'
                                    } %} 
                                </div>
                                <table class="table table-hover table-striped">
                                    <thead>
                                        <th>
                                            <span>ID</span>
                                        </th>
                                        <th>GIR 1-2</th>
                                        <th>GIR 3-4</th>
                                        <th>GIR 5-6</th>
                                        <td>Action</td>
                                    </thead>
                                    <tbody>
                                        {% for entity in entities.results %}
                                            <tr>
                                                <td>
                                                    <span>{{ entity.id }}</span>
                                                </td>
                                                <td>{{ entity.one }}</td>
                                                <td>{{ entity.two }}</td>
                                                <td>{{ entity.three }}</td>
                                                <td>
                                                    {% include 'block/button.html.twig' with {
                                                        'name' : 'gir'
                                                    } %}
                                                </td>
                                            </tr>
                                        {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
            </div>
        </div>
    </div>
</div>

{% endblock %}