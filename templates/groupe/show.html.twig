{% extends 'admin.html.twig' %}

{% block title %}Groupe{% endblock %}

{% block body %}
    <div class="main-panel">

        <nav class="navbar navbar-default navbar-fixed">
            <div class="container-fluid">
                <div class="navbar-header">
                    <a class="navbar-brand" href="#">Voir un groupe</a>
                </div>
            </div>
        </nav>

        <div class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="content">
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <label>nom</label>
                                            <div>
                                                {{ groupe.name }}
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label>email</label>
                                            <div>
                                                {{ groupe.email }}
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label>téléphone</label>
                                            <div>
                                                {{ groupe.phone }}
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label>ville</label>
                                            <div>
                                                {{ groupe.city }}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                {% include 'block/button.html.twig' with {
                    'name': 'groupe',
                    'entity': groupe,
                    'no_show': 1
                } %}
            </div>
        </div>
    </div>
{% endblock %}
