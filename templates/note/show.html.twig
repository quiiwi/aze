{% extends 'admin.html.twig' %}

{% block title %}Note{% endblock %}

{% block body %}
    <div class="main-panel">

        <nav class="navbar navbar-default navbar-fixed">
            <div class="container-fluid">
                <div class="navbar-header">
                    <a class="navbar-brand" href="#">Voir un note</a>
                </div>
            </div>
        </nav>

        <div class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="content">
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <label>nom</label>
                                            <div>
                                                {{ note.name }}
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label>place</label>
                                            <div>
                                                {{ note.place }}
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label>note</label>
                                            <div>
                                                {{ note.notation }}
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label>visible</label>
                                            <div>
                                                {% if note.isVisible %}
                                                    <span>Oui</span>
                                                {% else %}
                                                    <span>Non</span>
                                                {% endif %}
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label>commentaire</label>
                                            <div>
                                                {{ note.commentary }}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                {% include 'block/button.html.twig' with {
                    'name': 'note',
                    'entity': note,
                    'no_show': 1
                } %}
            </div>
        </div>
    </div>
{% endblock %}
