{% extends 'admin.html.twig' %}

{% block title %}Contenu{% endblock %}

{% block body %}

    <div class="main-panel">

        <nav class="navbar navbar-default navbar-fixed">
            <div class="container-fluid">
                <div class="navbar-header">
                    <a class="navbar-brand">Liste des contenus</a>
                </div>
            </div>
        </nav>

        <div class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">

                        <div class="hover mb-10">
                            <a href="{{ path('content_new') }}" class="btn btn-primary btn-fill">Ajouter un contenu</a>
                            <span class="toggle_filter pl-10">
                                Filtrer
                        </span>
                        </div>                        
                        <div class="card p-10" id="filter-block">
                            {{ form_start(form) }}
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <label>{{ form_label(form.name) }}</label>
                                            {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
                                            {{ form_errors(form.name) }}
                                        </div>
                                    </div>
                                </div>

                                <button type="submit" class="btn btn-info btn-fill pull-right">Filtrer</button>
                                <a href="{{ path('content_index') }}" class="btn btn-warning">RÃ©initialiser</a>
                                <div class="clearfix"></div>
                                {{ form_rest(form) }}
                                {{ form_end(form) }}
                        </div>

                        <div class="card">
                            <div class="content table-responsive table-full-width">
                                <table class="table table-hover table-striped">
                                    <thead>
                                        <th>
                                            <span>ID</span>
                                        </th>
                                        <th>nom</th>
                                        <td>Action</td>
                                    </thead>
                                    <tbody>
                                        {% for entity in entities %}
                                            <tr>
                                                <td>
                                                    <span>{{ entity.id }}</span>
                                                </td>
                                                <td>{{ entity.name }}</td>
                                                <td>
                                                    {% include 'block/button.html.twig' with {
                                                        'name' : 'content'
                                                    } %}
                                                </td>
                                            </tr>
                                        {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
            </div>
        </div>
    </div>
</div>

{% endblock %}