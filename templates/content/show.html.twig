{% extends 'admin.html.twig' %}

{% block title %}Contenu{% endblock %}

{% block body %}
    <div class="main-panel">

        <nav class="navbar navbar-default navbar-fixed">
            <div class="container-fluid">
                <div class="navbar-header">
                    <a class="navbar-brand" href="#">Voir un contenu</a>
                </div>
            </div>
        </nav>

        <div class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="content">
                                <div class="row">
                                    <div class="col-md-12">

                                        <div class="form-group">
                                            <label>nom</label>
                                            <div>
                                                {{ content.name }}
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label>Contenu 1</label>
                                            <div>
                                                {{ content.content1 }}
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label>Contenu 2</label>
                                            <div>
                                                {{ content.content2 }}
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label>Contenu 3</label>
                                            <div>
                                                {{ content.content3}}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                {% include 'block/button.html.twig' with {
                    'name': 'content',
                    'entity': content,
                    'no_show': 1
                } %}
            </div>
        </div>
    </div>
{% endblock %}
