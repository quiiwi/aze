{% extends 'admin.html.twig' %}

{% block title %}Ajouter/Modifier un contenu{% endblock %}

{% block body %}

    <div class="main-panel">

        <nav class="navbar navbar-default navbar-fixed">
            <div class="container-fluid">
                <div class="navbar-header">
                    <a class="navbar-brand" href="#">Ajouter/Modifier un contenu</a>
                </div>
            </div>
        </nav>

        <div class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="content">
                            	{{ form_start(form) }}
                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="form-group">
                                                <label>{{ form_label(form.name) }}</label>
                                                {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
                                                {{ form_errors(form.name) }}
                                            </div>
                                            <div class="form-group">
                                                <label>{{ form_label(form.content1) }}</label>
												{{ form_widget(form.content1, {'attr': {'class': 'form-control'}}) }}
												{{ form_errors(form.content1) }}
                                            </div>
                                            <div class="form-group">
                                                <label>{{ form_label(form.content1) }}</label>
                                                {{ form_widget(form.content2, {'attr': {'class': 'form-control'}}) }}
                                                {{ form_errors(form.content2) }}
                                            </div>
                                            <div class="form-group">
                                                <label>{{ form_label(form.content3) }}</label>
                                                {{ form_widget(form.content3, {'attr': {'class': 'form-control'}}) }}
                                                {{ form_errors(form.content3) }}
                                            </div>
                                        </div>
                                    </div>

                                    <button type="submit" class="btn btn-info btn-fill pull-right">Enregister</button>
                                    <div class="clearfix"></div>
                                    {{ form_rest(form) }}
                                    {{ form_end(form) }}
                            </div>
                        </div>
                        <a href="{{ path('content_index') }}" class="btn btn-warning btn-fill">Retour a la liste</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}