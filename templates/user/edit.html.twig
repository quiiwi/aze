{% extends 'admin.html.twig' %}

{% block title %}Ajouter/Modifier un utilisateur{% endblock %}

{% block body %}

<div class="main-panel">

    <nav class="navbar navbar-default navbar-fixed">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand" href="#">Ajouter/Modifier un utilisateur</a>
            </div>
        </div>
    </nav>

    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="content">
                        	{{ form_start(form) }}
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <label>{{ form_label(form.gender) }}</label>
                                            {{ form_widget(form.gender, {'attr': {'class': 'form-control'}}) }}
                                            {{ form_errors(form.gender) }}
                                        </div>
                                        <div class="form-group">
                                            <label>{{ form_label(form.firstname) }}</label>
                                            {{ form_widget(form.firstname, {'attr': {'class': 'form-control'}}) }}
                                            {{ form_errors(form.firstname) }}
                                        </div>
                                        <div class="form-group">
                                            <label>{{ form_label(form.lastname) }}</label>
                                            {{ form_widget(form.lastname, {'attr': {'class': 'form-control'}}) }}
                                            {{ form_errors(form.lastname) }}
                                        </div>
                                        <div class="form-group">
                                            <label>{{ form_label(form.email) }}</label>
                                            {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                                            {{ form_errors(form.email) }}
                                        </div>

                                        <div class="form-group">
                                            <label>{{ form_label(form.birthday) }}</label>
                                            {{ form_widget(form.birthday, {'attr': {'class': 'form-control'}}) }}
                                            {{ form_errors(form.birthday) }}
                                        </div>

                                        <div class="form-group">
                                            <label>{{ form_label(form.password.first) }}</label>
                                            {{ form_widget(form.password.first, {'attr': {'class': 'form-control'}}) }}
                                            {{ form_errors(form.password.first) }}
                                        </div>
                                        <div class="form-group">
                                            <label>{{ form_label(form.password.second) }}</label>
                                            {{ form_widget(form.password.second, {'attr': {'class': 'form-control'}}) }}
                                            {{ form_errors(form.password.second) }}
                                        </div>

                                        <div class="form-group">
                                            <label>{{ form_label(form.phone) }}</label>
                                            {{ form_widget(form.phone, {'attr': {'class': 'form-control'}}) }}
                                            {{ form_errors(form.phone) }}
                                        </div>
                                        <div class="form-group">
                                            <label>{{ form_label(form.role) }}</label>
                                            {{ form_widget(form.role, {'attr': {'class': 'form-control'}}) }}
                                            {{ form_errors(form.role) }}
                                        </div>
                                        <div class="form-group">
                                            <label>{{ form_label(form.address) }}</label>
                                            {{ form_widget(form.address, {'attr': {'class': 'form-control'}}) }}
                                            {{ form_errors(form.address) }}
                                        </div>
                                        <div class="form-group">
                                            <label>{{ form_label(form.zipCode) }}</label>
                                            {{ form_widget(form.zipCode, {'attr': {'class': 'form-control'}}) }}
                                            {{ form_errors(form.zipCode) }}
                                        </div>
                                        <div class="form-group">
                                            <label>{{ form_label(form.city) }}</label>
                                            {{ form_widget(form.city, {'attr': {'class': 'form-control'}}) }}
                                            {{ form_errors(form.city) }}
                                        </div>
                                        <div class="form-group">
                                            <label>{{ form_label(form.region) }}</label>
                                            {{ form_widget(form.region, {'attr': {'class': 'form-control'}}) }}
                                            {{ form_errors(form.region) }}
                                        </div>
                                        <div class="form-group">
                                            <label>{{ form_label(form.department) }}</label>
                                            {{ form_widget(form.department, {'attr': {'class': 'form-control'}}) }}
                                            {{ form_errors(form.department) }}
                                        </div>                                        
                                        <div class="form-group">
                                            <label>{{ form_label(form.groupe) }}</label>
                                            {{ form_widget(form.groupe, {'attr': {'class': 'form-control'}}) }}
                                            {{ form_errors(form.groupe) }}
                                        </div>
                                    </div>
                                </div>

                                <button type="submit" class="btn btn-info btn-fill pull-right">Enregister</button>
                                <div class="clearfix"></div>
                                {{ form_rest(form) }}
                                {{ form_end(form) }}
                        </div>
                    </div>
                    <a href="{{ path('establishement_index') }}" class="btn btn-warning btn-fill">Retour a la liste</a>
                </div>
            </div>
        </div>
    </div>
</div>

{% endblock %}
