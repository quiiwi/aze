{% extends 'base.html.twig' %}

{% block body %}

{% block content_top_image %}
{% endblock %}

<div class="container mt-5">
	 <div class="row">
	 	<div class="col-md-7">
		 	<div class="main-blue">
		 		<span class="h1">MON ESPACE</span>
		 		<span class="h1 bold" class="bold">PERSONNEL</span>
		 	</div>
		 	<div class="divider-blue mt-3"></div>

		 	{% if candidacies|length != 0 %}
			 	<div class="main-blue mt-4">
			 		<h2>Mes Candidatures envoyées</h2>
			 	</div>
		 	{% endif %}

		 	{% for c in candidacies %}

	<div id="profile" class="mt-2 pb-5">
	<div class="candidature">

		<div class="card grey right-no-border">
			Envoyé le 10/07/2017
		</div>

		<div class="card original-shadow">
			<div class="row p-3">
				<div class="pr-3 inline-block"><img src="https://via.placeholder.com/250x200"></div>
				<div class="inline-block">

					<div class="note">
						<div class="row">
							<div class="">
	 						<span class="badge bg-main-blue white badge-style-and-size">
	 							<span>9,5</span>
								</span>
							</div>
							<div class="pl-2 fs-12">
								<div class="main-blue">Exceptionnel</div>
								<div class="grey">10 avis</div>
							</div>
						</div>
					</div>

					<div class="name fs-20">
						<span>{{ c.establishment.name }}</span>
					</div>
					<div class="place fs-20">
						<span class="main-blue">Paris</span>
					</div>
					<div class="note-stars">
						{% for i in 1..c.note %}
							<i class="fas fa-star orange"></i>
						{% endfor %}
					</div>
					<div class="type">
						<span class="grey">
							Type d'établissement : 
						</span>
						<span>
						<span class="badge badge-success p-2">EHPAD</span>
						</span>
					</div>
					<div class="price">
						<span>A partir de 1800 euros</span>
					</div>
					<div class="activities mt-4">
						<i class="fas fa-utensils orange icon-activity icon-activity-padding"></i>
						<i class="fas fa-wifi orange icon-activity"></i>
						<i class="fas fa-dog orange icon-activity"></i>
						<i class="fas fa-cut orange icon-activity"></i>
					</div>
					<div class="look-card">
						<button class="btn bg-orange white">
							Voir la fiche
						</button>
					</div>
				</div>
			</div>
		</div>

		<div class="mt-3">
			<span>
				Etat de la demande : <span class="main-blue">
					{{ c.status }}
				</span> 
			</span>
		</div>

		</div>
		</div>

			 	<div class="divider-orange"></div>
			{% else %}
				<p class="mt-4">
					Aucune candidature pour le moment...
				</p>
		 	{% endfor %}

	 	</div>
	 	<div class="col-md-4 ml-5 pb-5">
	 		<div class="original-shadow p-4">
	 			<span class="grey">Mes informations personnelles</span>
		 		<div class="mt-3">
		 			<span>{{ app.user.firstname }} {{ app.user.lastname }}</span>
		 		</div>
		 		<div class="mt-3">
		 			<span class="bold">Date de naissance</span><br>
		 			<span>{{ app.user.birthday|date('d/m/Y') }}</span>
		 		</div>
		 		<div class="mt-3">
		 			<span class="bold">Contact</span><br>
		 			<span>{{ app.user.phone }}</span><br>
		 			<span>{{ app.user.email }}</span>
		 		</div>
		 		<div class="mt-3">
		 			<span>
		 				<a class="orange" href="{{ path('update_profile') }}">Mettre à jour</a>
		 			</span><br>
		 			<span>
		 				<a class="orange" href="{{ path('user_file') }}">Mes documents</a>
		 			</span><br>
		 		</div>
	 		</div>
	 	</div>
	 </div>
</div>

{% endblock %}