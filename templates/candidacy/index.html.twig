{% extends 'admin.html.twig' %}

{% block title %}Candidature{% endblock %}

{% block body %}

    <div class="main-panel">

        <nav class="navbar navbar-default navbar-fixed">
            <div class="container-fluid">
                <div class="navbar-header">
                    <a class="navbar-brand">Liste des candidatures</a>
                </div>
            </div>
        </nav>

        <div class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <div class="hover mb-10">
                            <a href="{{ path('candidacy_new') }}" class="btn btn-primary btn-fill">Ajouter une candidature</a>
                            <span class="toggle_filter pl-10">
                                Filtrer
                        </span>
                            <a href="{{ path('candidacy_export') }}{{ stringResponse }}" class="btn btn-success btn-fill pull-right">Exporter</a>      
                        </div>                        
                        <div class="card p-10" id="filter-block">
                            {{ form_start(form) }}
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <label>{{ form_label(form.firstname) }}</label>
                                            {{ form_widget(form.firstname, {'attr': {'class': 'form-control'}}) }}
                                            {{ form_errors(form.firstname) }}
                                        </div>

                                        <div class="form-group">
                                            <label>{{ form_label(form.lastname) }}</label>
                                            {{ form_widget(form.lastname, {'attr': {'class': 'form-control'}}) }}
                                            {{ form_errors(form.lastname) }}
                                        </div>

                                        <div class="form-group">
                                            <label>{{ form_label(form.email) }}</label>
                                            {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                                            {{ form_errors(form.email) }}
                                        </div>

                                        <div class="form-group">
                                            <label>{{ form_label(form.status) }}</label>
                                            {{ form_widget(form.status, {'attr': {'class': 'form-control'}}) }}
                                            {{ form_errors(form.status) }}
                                        </div>

                                        <div class="form-group">
                                            <label>{{ form_label(form.establishment) }}</label>
                                            {{ form_widget(form.establishment, {'attr': {'class': 'form-control'}}) }}
                                            {{ form_errors(form.establishment) }}
                                        </div>

                                    </div>
                                </div>

                                <button type="submit" class="btn btn-info btn-fill pull-right">Filtrer</button>
                                <a href="{{ path('candidacy_index') }}" class="btn btn-warning">Réinitialiser</a>
                                <div class="clearfix"></div>
                                {{ form_rest(form) }}
                                {{ form_end(form) }}
                        </div>

                        <div class="card">
                            <div class="content table-responsive table-full-width">

                                <div class="pr-10">
                                    {% include 'block/pagination.html.twig' with {
                                        'name' : 'candidacy'
                                    } %} 
                                </div>
                                <table class="table table-hover table-striped">
                                    <thead>
                                        <th>
                                            <span>ID</span>
                                        </th>
                                        <th>nom</th>
                                        <th>prénom</th>
                                        <th>email</th>
                                        <th>établissement</th>
                                        <th>status</th>
                                        <td>Action</td>
                                    </thead>
                                    <tbody>
                                        {% for entity in entities.results %}
                                            <tr>
                                                <td>
                                                    <span>{{ entity.id }}</span>
                                                </td>
                                                <td>{{ entity.user.firstname }}</td>
                                                <td>{{ entity.user.lastname }}</td>
                                                <td>{{ entity.user.email }}</td>
                                                <td>{{ entity.establishment }}</td>
                                                <td>{{ entity.status }}</td>
                                                <td>
                                                    {% include 'block/button.html.twig' with {
                                                        'name' : 'candidacy'
                                                    } %}
                                                </td>
                                            </tr>
                                        {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
            </div>
        </div>
    </div>
</div>

{% endblock %}