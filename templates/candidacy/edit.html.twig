{% extends 'admin.html.twig' %}

{% block title %}Ajouter/Modifier une candidature{% endblock %}

{% block body %}

    <div class="main-panel">

        <nav class="navbar navbar-default navbar-fixed">
            <div class="container-fluid">
                <div class="navbar-header">
                    <a class="navbar-brand" href="#">Ajouter/Modifier une candidature</a>
                </div>
            </div>
        </nav>

        <div class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="content">
                            	{{ form_start(form) }}
                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="form-group">
                                                <label>{{ form_label(form.establishment) }}</label>
												{{ form_widget(form.establishment, {'attr': {'class': 'form-control'}}) }}
												{{ form_errors(form.establishment) }}
                                            </div>
                                            <div class="form-group">
                                                <label>{{ form_label(form.user) }}</label>
												{{ form_widget(form.user, {'attr': {'class': 'form-control'}}) }}
												{{ form_errors(form.user) }}
                                            </div>

                                            <div class="form-group">
                                                <label>{{ form_label(form.status) }}</label>
												{{ form_widget(form.status, {'attr': {'class': 'form-control'}}) }}
												{{ form_errors(form.status) }}
                                            </div>
                                            <div class="form-group">
                                                <label>{{ form_label(form.note) }}</label>
                                                {{ form_widget(form.note, {'attr': {'class': 'form-control'}}) }}
                                                {{ form_errors(form.note) }}
                                            </div>
                                        </div>
                                    </div>

                                    <button type="submit" class="btn btn-info btn-fill pull-right">Enregister</button>
                                    <div class="clearfix"></div>
                                    {{ form_rest(form) }}
                                    {{ form_end(form) }}
                            </div>
                        </div>
                        <a href="{{ path('candidacy_index') }}" class="btn btn-warning btn-fill">Retour a la liste</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}